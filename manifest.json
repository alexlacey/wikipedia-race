{
  "manifest_version": 2,
  "name": "Wikipedia Wars",
  "version": "1.0",
  "permissions": ["activeTab", "tabs"],
  "background": { 
    "scripts": ["background.js", "jquery-3.2.1.min.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
  "content_scripts": [
    {
      "matches": ["https://immense-stream-44778.herokuapp.com/"], // assumption: the content script can keep going when the user moves to different pages
      "js": ["content1.js"] // will start the timer and change the Browser Action icon to indicate an ongoing game
    }
    { 
       "matches":["https://tranquil-taiga-73034.herokuapp.com/"], // am I allowed to have two matching statements in one "content_scripts" bracket?
      "js": ["content4.js"] // will stop the timer and re-direct to our End-page
    }
  ]

}